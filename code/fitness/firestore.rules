rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // 會員資料規則
    match /members/{userId} {
      allow read: if request.auth != null && (
        request.auth.uid == userId || // 允許用戶讀取自己的資料
        get(/databases/$(database)/documents/members/$(request.auth.uid)).data.role == 'admin' // 或管理員可讀取
      );
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
    }

    // 預約資料規則
    match /appointments/{appointmentId} {
      allow read: if request.auth != null && (
        resource.data.email == request.auth.token.email || // 用戶可以讀取自己的預約
        get(/databases/$(database)/documents/members/$(request.auth.uid)).data.role in ['admin', 'trainer'] // 管理員和教練可讀取
      );
      allow create: if request.auth != null;
      allow update: if request.auth != null && (
        resource.data.email == request.auth.token.email || // 用戶可以更新自己的預約
        get(/databases/$(database)/documents/members/$(request.auth.uid)).data.role in ['admin', 'trainer'] // 管理員和教練可更新
      );
    }

    // 通知規則
    match /notifications/{notificationId} {
      allow read: if request.auth != null && (
        resource.data.email == request.auth.token.email || // 用戶可以讀取自己的通知
        get(/databases/$(database)/documents/members/$(request.auth.uid)).data.role == 'admin' // 管理員可讀取
      );
      allow create: if request.auth != null;
      allow update: if request.auth != null && resource.data.email == request.auth.token.email;
    }
    
    // 訓練記錄規則
    match /trainingRecords/{recordId} {
      allow read: if request.auth != null && (
        resource.data.email == request.auth.token.email || // 用戶可以讀取自己的訓練記錄
        get(/databases/$(database)/documents/members/$(request.auth.uid)).data.role in ['admin', 'trainer'] // 管理員和教練可讀取
      );
      allow create: if request.auth != null && (
        request.resource.data.email == request.auth.token.email || // 用戶可以創建自己的訓練記錄
        get(/databases/$(database)/documents/members/$(request.auth.uid)).data.role in ['admin', 'trainer'] // 管理員和教練可創建
      );
      allow update: if request.auth != null && (
        resource.data.email == request.auth.token.email || // 用戶可以更新自己的訓練記錄
        get(/databases/$(database)/documents/members/$(request.auth.uid)).data.role in ['admin', 'trainer'] // 管理員和教練可更新
      );
    }
  }
} 